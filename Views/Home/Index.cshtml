@model LoginRegistration.Models.IndexViewModel;

@{
ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="Register" asp-controller="Home" method="post">
    <label for="">First Name:</label>
        <span asp-validation-for="newRegister.firstName"></span>
        <input type="text" asp-for="newRegister.firstName"/><br>
    <label for="">Last Name:</label>
        <span asp-validation-for="newRegister.lastName"></span>
        <input type="text" asp-for="newRegister.lastName"/><br>
    <label for="">Email:</label>
        <span asp-validation-for="newRegister.email"></span>
        <input type="text" asp-for="newRegister.email"/><br>
    <label for="">Password</label>
        <span asp-validation-for="newRegister.password"></span>
        <input type="text" asp-for="newRegister.password"/><br>
    <label for="">Confirm Password</label>
        <span asp-validation-for="newRegister.confirmPassword"></span>
        <input type="text" asp-for="newRegister.confirmPassword"/><br>
    <button type="submit">Sign Up Now</button>
</form>

<form asp-action="Login" asp-controller="Home" method="post">
<label for="">Email:</label>
<input type="text" asp-for="newLogin.email" /><br>
<label for="">Password</label>
<input type="text" asp-for="newLogin.password" /><br>
<button type="submit">Sign In Whore</button>
</form>